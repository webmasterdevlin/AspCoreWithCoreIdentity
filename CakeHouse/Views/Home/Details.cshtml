@model Cake


<h2>@Model.Name</h2>

<div class="img-thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl"/>
    <div class="figure">
        <h3 class="float-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>
